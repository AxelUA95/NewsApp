<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card:cardCornerRadius="4dp"
    card:cardElevation="3dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this is text for android app to show tweets from twitter and another apis"
            android:textSize="22sp"
            android:layout_toLeftOf="@+id/twitter_image_view"
            android:layout_toStartOf="@+id/twitter_image_view"
            android:fontFamily="sans-serif-medium"/>

        <ImageView
            android:id="@+id/twitter_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:src="@drawable/twitter_icon"
            android:contentDescription="@string/provider_content_description"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>