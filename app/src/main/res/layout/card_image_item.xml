<?xml version="1.0" encoding="utf-8"?>
<com.proj.andoid.localnews.ui.custom.SquareCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:contentDescription="@string/image_content_description"
        android:scaleType="centerCrop"
        app:elevation="2dp"
        android:saveEnabled="true"
        android:background="?android:selectableItemBackground"/>

    <ImageView
        android:id="@+id/provider_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|end"
        android:contentDescription="@string/provider_content_description"
        android:src="@drawable/flickr_icon"
        app:elevation="3dp" />

    <ProgressBar
        android:id="@+id/image_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

</com.proj.andoid.localnews.ui.custom.SquareCardView>